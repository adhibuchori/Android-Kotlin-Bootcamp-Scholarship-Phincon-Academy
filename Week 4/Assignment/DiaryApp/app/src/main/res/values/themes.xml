<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DiaryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
    </style>

    <style name="Theme.DiaryApp" parent="Base.Theme.DiaryApp" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.DiaryApp</item>
    </style>

    <!-- Home Page Container -->

    <style name="HomePageContainerColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="HomePageContainerCorner">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="ItemRowContainerColor">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Text Style -->

    <style name="DiaryAppTextStyle">
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Home Page Text Style -->

    <style name="HomePageSubtitleTextStyle" parent="DiaryAppTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="HomePageTitleTextStyle" parent="DiaryAppTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Item Row Text Style -->

    <style name="ItemRowTextStyle" parent="DiaryAppTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ItemRowDateTextStyle" parent="ItemRowTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ItemRowTitleTextStyle" parent="ItemRowTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Tab Layout Style -->
    <style name="HomePageTabLayoutColorStyle">
        <item name="android:background">@color/white</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/dark_gray</item>
    </style>

    <style name="HomePageTabLayoutTextAppearanceStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_medium</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="HomePageFloatingActionButtonColorStyle">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>

    <!-- Item Dialog Confirmation -->
    <style name="DialogConfirmationTextStyle" parent="DiaryAppTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
    </style>

    <!-- Item Dialog -->
    <style name="DialogCustomizeTaskTextStyle" parent="DiaryAppTextStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
    </style>

    <style name="DialogCustomizeTaskTitleTextStyle" parent="DiaryAppTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>