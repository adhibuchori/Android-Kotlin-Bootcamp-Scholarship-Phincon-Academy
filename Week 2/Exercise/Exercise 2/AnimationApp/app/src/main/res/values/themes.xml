<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AnimationApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_primary_color</item>
    </style>

    <style name="Theme.AnimationApp" parent="Base.Theme.AnimationApp" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.AnimationApp</item>
    </style>

    <style name="RoundContainerBackground" parent="Base.Theme.AnimationApp">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="Headline" parent="Base.Theme.AnimationApp">
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Title" parent="Base.Theme.AnimationApp">
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SubTitle" parent="Base.Theme.AnimationApp">
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>