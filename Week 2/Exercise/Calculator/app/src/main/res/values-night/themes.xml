<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <style name="ThemeBackground">
        <item name="android:background">@color/night_display_backgorund</item>
    </style>

    <style name="ThemeColorTextEqual">
        <item name="android:background">@color/night_secondary_text</item>
    </style>

    <style name="ThemeColorTextInput">
        <item name="android:textColor">@color/night_primary_text</item>
    </style>

    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="cornerRadius">25dp</item>
        <item name="fontFamily">@font/plus_jakarta_sans_medium</item>
        <item name="android:backgroundTint">@color/night_buttons_background</item>
        <item name="android:textColor">@color/night_primary_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AllClearButton" parent="CalculatorButton">
        <item name="cornerRadius">25dp</item>
        <item name="android:backgroundTint">@color/night_all_clear_button_background</item>
        <item name="android:textColor">@color/night_all_clear_text</item>
    </style>

    <style name="ActionButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/night_action_button_background</item>
        <item name="android:textColor">@color/night_action_text</item>
    </style>

    <style name="ActionOperationButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/night_action_operation_button_background</item>
        <item name="android:textColor">@color/night_primary_text</item>
    </style>

    <style name="EqualButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/night_equal_button_background</item>
        <item name="android:textColor">@color/night_equal_text</item>
    </style>

</resources>